# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Admin API Key (optional - for usage reconciliation)
# Get one from: https://platform.openai.com/settings/organization/admin-keys
# This is used to fetch actual usage data from OpenAI to reconcile streaming requests
OPENAI_ADMIN_KEY=your_openai_admin_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Debug Mode (optional - enables verbose logging for reconciliation)
# Set to 'true' to enable detailed logs, or 'false' (or omit) for normal operation
DEBUG=false

# Database Configuration
DATABASE_PATH=./db/usage.db

# Token Limits (tokens per day)
# Note: Token quotas reset daily at 00:00 UTC to match OpenAI's schedule
PREMIUM_TIER_LIMIT=1000000
MINI_TIER_LIMIT=10000000
